               android:layout_marginTop="@dimen/_20sdp"
               android:text="@string/text_select_date"
               android:textColor="@color/light_blue_900"
               android:textSize="@dimen/_14ssp"
               app:layout_constraintStart_toEndOf="@+id/ivCalender"
